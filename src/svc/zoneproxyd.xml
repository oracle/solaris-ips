<service_bundle type='manifest' name='system/zones-proxyd'>

<service
	name='system/zones-proxyd'
	type='service'
	version='1'>
	<create_default_instance enabled="false"/>
	<single_instance/>

	 <dependency
	 	name='fs'
	 	grouping='require_any'
	 	restart_on='none'
	 	type='service'>
	 	<service_fmri value='svc:/system/filesystem/minimal' />
	 </dependency>

	 <dependency
		  name='zones'
		  type='service'
		  grouping='require_any'
		  restart_on='none'>
		  <service_fmri value='svc:/system/zones' />
	 </dependency>

        <dependency name='network'
                grouping='require_any'
                restart_on='error'
                type='service'>
                <service_fmri value='svc:/milestone/network' />
        </dependency>

	<dependency
		  name='sysrepo'
	          type='service'
	          grouping='require_all'
	          restart_on='refresh'>
	          <service_fmri value='svc:/application/pkg/system-repository' />
	</dependency>

	<exec_method
		type='method'
		name='start'
		exec='/usr/lib/zones/zoneproxyd -s `svcprop -c -p config/host application/pkg/system-repository:default`:`svcprop -c -p config/port application/pkg/system-repository:default`'
		timeout_seconds='300'>
		<method_context>
			<method_credential user='root'/>
		</method_context>
	</exec_method>

	<exec_method
		type='method'
		name='stop'
		exec=':kill'
		timeout_seconds='300'>
		<method_context>
			<method_credential user='root'/>
		</method_context>
	</exec_method>

	<stability value='Unstable' />

	<template>
		<common_name>
			<loctext xml:lang='C'>
			Zones Proxy Daemon
			</loctext>
		</common_name>
		<documentation>
			<manpage title='zoneproxyd' section='1M'
			     manpath='/usr/share/man' />
		</documentation>
	</template>
</service>

</service_bundle>
