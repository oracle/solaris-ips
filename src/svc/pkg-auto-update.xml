<!DOCTYPE service_bundle SYSTEM "/usr/share/lib/xml/dtd/service_bundle.dtd.1">

<service_bundle type='manifest' name='system/auto-update'>

<service
    name='system/auto-update'
    type='service'
    version='1'>

	<dependency
	    name='required_dependencies'
	    grouping='require_all'
	    restart_on='none'
	    type='service'>
		<service_fmri value='svc:/milestone/multi-user:default' />
		<service_fmri value='svc:/system/filesystem/local' />
		<service_fmri value='svc:/milestone/self-assembly-complete' />
                <service_fmri value='svc:/milestone/name-services:default' />
                <service_fmri value='svc:/milestone/network:default' />
	</dependency>


	<instance name='default' enabled='false'>
		<scheduled_method
			interval='day'
			hour='3'
			minute='0'
			recover='true'
			exec='/lib/svc/method/svc-pkg-auto-update'
			timeout_seconds='0'>
			    <method_context>
				<method_credential trusted_path='true'
					user='root' group='root' />
			    </method_context>
		</scheduled_method>
		<property_group type='application' name='config'>
			<propval type='boolean' name='auto-reboot' value='false' />
			<propval type='boolean' name='require-new-be' value='false' />
			<propval type='boolean' name='activate-new-be' value='true' />
			<property name='packages' type='astring'>
				<!-- Set an empty value so it is visible with editprop -->
				<astring_list>
					<value_node value='' />
				</astring_list>
			</property>
			<propval type='astring' name='reboot-check-hook' value='' />
		</property_group>

		<template>
			<common_name>
				<loctext xml:lang='C'>
					Automatic Package Update Service
				</loctext>
			</common_name>
		</template>
	</instance>

	<instance name='cleanup' enabled='true'>

		<scheduled_method
			interval='day'
			hour='0'
			minute='0'
			recover='true'
			exec='/lib/svc/method/svc-pkg-auto-update-cleanup'
			timeout_seconds='0'>
			    <method_context>
				<method_credential trusted_path='true'
					user='root' group='root' />
			    </method_context>
		</scheduled_method>
		<property_group type='application' name='config'>
			<propval type='integer' name='keep' value='6' />
		</property_group>
		<template>
			<common_name>
				<loctext xml:lang='C'>
					Automatic Boot Environment Cleanup
				</loctext>
			</common_name>
		</template>
	</instance>

</service>

</service_bundle>
